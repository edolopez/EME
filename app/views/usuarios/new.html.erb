<h1>Nuevo usuario</h1>

<% form_for(@usuario) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nombre, 'Nombre' %><br />
    <%= f.text_field :nombre%>
  </p>
  <p>
    <%= f.label :correoElectronico, 'Correo electronico' %><br />
    <%= f.text_field :correoElectronico%>
  </p>
  <p>
    <%= f.label :telefono, 'Telefono' %><br />
    <%= f.text_field :telefono, :placeholder => "(123) 555-1234" %>
  </p>

  <p>
    <%= f.label :usuario_password, 'Password' %><br />
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :usuario_password_confirmation, 'Confirmacion' %><br />
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

