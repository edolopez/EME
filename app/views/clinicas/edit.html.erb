<h1>Editing clinica</h1>

<% form_for(@clinica) do |f| %>
  <%= f.error_messages %>
    <% fields_for(@usuario) do |u| %>
      <%= error_messages_for :usuario %>
      <p>
        <%= u.label :nombre, 'Nombre' %><br />
        <%= u.text_field :nombre%>
      </p>
      <p>
        <%= u.label :correoElectronico, 'Correo electronico' %><br />
        <%= u.text_field :correoElectronico%>
      </p>
      <p>
        <%= u.label :telefono, 'Telefono' %><br />
        <%= u.text_field :telefono, :placeholder => "(123) 555-1234" %>
      </p>
    <% end %>
  <p>
    <%= f.label :rfc %><br />
    <%= f.text_field :rfc %>
  </p>
  <p>
    <%= f.label :ciudad %><br />
    <%= f.text_field :ciudad %>
  </p>
  <p>
    <%= f.label :estado %><br />
    <%= f.text_field :estado %>
  </p>
  <p>
    <%= f.label :calle %><br />
    <%= f.text_field :calle %>
  </p>
  <p>
    <%= f.label :colonia %><br />
    <%= f.text_field :colonia %>
  </p>
  <p>
    <%= f.label :codigoPostal %><br />
    <%= f.text_field :codigoPostal %>
  </p>
  <p>
    <%= f.label :fax %><br />
    <%= f.text_field :fax %>
  </p>
  <p>
    <%= f.label :tipoClinica %><br />
    <%= f.text_field :tipoClinica %>
  </p>
  <p>
    <%= f.label :especialidad %><br />
    <%= f.text_field :especialidad %>
  </p>
  <p>
    <%= f.label :sitioWeb %><br />
    <%= f.text_field :sitioWeb %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

