<br/>
 <div class="body">
	


<div class = "tabla"> 
<div class = "tablaArriba"> 
<h1>Nueva clinica</h1>
</div>
<div class = "contenidoTabla">




<% form_for(@clinica) do |f| %>
<% fields_for(@usuario) do |u| %>
  <%= error_messages_for :usuario, :clinica %>

	 <p>
    <%= u.label :nombre, 'Nombre' %><br />
    <%= u.text_field :nombre, :class => 'round'%>
  </p>
  <p>
    <%= u.label :correoElectronico, 'Correo electronico' %><br />
    <%= u.text_field :correoElectronico, :class => 'round'%>
  </p>
  <p>
    <%= u.label :telefono, 'Telefono' %><br />
    <%= u.text_field :telefono, :placeholder => "(123) 555-1234", :class => 'round' %>
  </p>

  <p>
    <%= f.label :fax, 'Fax'  %><br />
    <%= f.text_field :fax, :class => 'round' %>
  </p>

  <p>
    <%= u.label :usuario_password, 'Contraseña' %><br />
    <%= u.password_field :password, :class => 'round' %>
  </p>

  <p>
    <%= u.label :usuario_password_confirmation, 'Confirmación de Contraseña' %><br />
    <%= u.password_field :password_confirmation, :class => 'round'%>
  </p>

  <p>
    <%= f.label :rfc, 'RFC'  %><br />
    <%= f.text_field :rfc, :class => 'round' %>
  </p>

 <p>
    <%= f.label :estado, 'Estado' %><br />
    <%= f.select :estado,
             Clinica::ESTADO,
            :prompt => "Selecciona un estado", :class => 'round'%>
  </p>

  <p>
    <%= f.label :ciudad, 'Ciudad'  %><br />
    <%= f.text_field :ciudad, :class => 'round' %>
  </p>
  <p>
    <%= f.label :calle, 'Calle'  %><br />
    <%= f.text_field :calle, :class => 'round' %>
  </p>
  <p>
    <%= f.label :colonia, 'Colonia'  %><br />
    <%= f.text_field :colonia, :class => 'round' %>
  </p>
  <p>
    <%= f.label :codigoPostal, 'Codigo Postal'  %><br />
    <%= f.text_field :codigoPostal, :class => 'round' %>
  </p>

  <p>
  	<%= f.label :tipoClinica, 'Tipo de Clinica' %><br />
        <%= label_tag(:tipoClinica, "Publica") %>
    <%= f.radio_button(:tipoClinica, "Publica") %>
        <%= label_tag(:tipoClinica, "Privada")  %>
    <%= f.radio_button(:tipoClinica, "Privada") %>
  </p>
  <p>
    <%= f.label :especialidad, 'Especialidad'  %><br />
    <%= f.text_field :especialidad, :class => 'round' %>
  </p>
  <p>
    <%= f.label :sitioWeb, 'Sitio Web'  %><br />
    <%= f.text_field :sitioWeb, :class => 'round'%>
  </p>
    <%= f.submit 'Create' %>
 
  <% end %>
<% end %>

<%= link_to 'Back', clinicas_path %>

</div>
<div class = "tablaAbajo">
</div>
</div>
</div>


