<h1>Clinicas</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Estado</th>
    <th>Tipoclinica</th>
    <th>Especialidad</th>
    <th>Sitioweb</th>
  </tr>

  <%@clinicas.each do |clinica| %>
    <tr>
      <td><%=h @usuarios[@cont].nombre %></td>
      <td><%=h clinica.estado %></td>
      <td><%=h clinica.tipoClinica %></td>
      <td><%=h clinica.especialidad %></td>
      <td><%=h clinica.sitioWeb %></td>
      <td><%= link_to 'Mostrar', :controller => "clinicas", :action => "datos", :id => clinica.id %>
      <td><%= link_to 'Editar', edit_clinica_path(clinica) %></td>
      <td><%= link_to 'Eliminar', clinica, :confirm => 'Â¿Seguro de querer eliminar el registro?', :method => :delete %></td>
      <% @cont = @cont + 1 %>
    </tr>
  <% end %>

</table>

