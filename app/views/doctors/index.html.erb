    <th>Nombre</th>
    <th>Apellidopaterno</th>
    <th>Apellidomaterno</th>
    <th>Especialidad</th>
  </tr>

<% @doctors.each do |doctor| %>
  <tr>
    <td><%=h @usuarios[@cont].nombre %></td>
    <td><%=h doctor.apellidoPaterno %></td>
    <td><%=h doctor.apellidoMaterno %></td>
    <td><%=h doctor.especialidad %></td>
    <td><%= link_to 'Mostrar', doctor %></td>
    <td><%= link_to 'Editar', edit_doctor_path(doctor) %></td>
    <td><%= link_to 'Eliminar', doctor, :confirm => 'Â¿Seguro que deseas eliminar el registro?', :method => :delete %></td>
    <% @cont = @cont + 1 %>
  </tr>
<% end %>
</table>

