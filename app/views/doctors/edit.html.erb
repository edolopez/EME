<h1>Editing doctor</h1>

<% form_for(@doctor) do |f| %>
  <%= f.error_messages %>
  <% fields_for(@usuario) do |u| %>
      <%= error_messages_for :usuario %>
      <p>
        <%= u.label :nombre, 'Nombre' %><br />
        <%= u.text_field :nombre%>
      </p>
      <p>
        <%= u.label :correoElectronico, 'Correo electronico' %><br />
        <%= u.text_field :correoElectronico%>
      </p>
      <p>
        <%= u.label :telefono, 'Telefono' %><br />
        <%= u.text_field :telefono, :placeholder => "(123) 555-1234" %>
      </p>
    <% end %>
  <p>
    <%= f.label :apellidoPaterno %><br />
    <%= f.text_field :apellidoPaterno %>
  </p>
  <p>
    <%= f.label :apellidoMaterno %><br />
    <%= f.text_field :apellidoMaterno %>
  </p>
  <p>
    <%= f.label :edad %><br />
    <%= f.text_field :edad %>
  </p>
  <p>
    <%= f.label :sexo %><br />
    <%= f.text_field :sexo %>
  </p>
  <p>
    <%= f.label :fechaNacimiento %><br />
    <%= f.date_select :fechaNacimiento %>
  </p>
  <p>
    <%= f.label :ciudadNacimiento %><br />
    <%= f.text_field :ciudadNacimiento %>
  </p>
  <p>
    <%= f.label :estadoNacimiento %><br />
    <%= f.text_field :estadoNacimiento %>
  </p>
  <p>
    <%= f.label :especialidad %><br />
    <%= f.text_field :especialidad %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @doctor %> |
<%= link_to 'Back', doctors_path %>

